<div class="container">
  <p>配送先登録/一覧</p>
<div class="row">
<div class="col-10">
<%= form_with model: @address, url: addresses_path do |f| %>
  <div>
    <%= f.label :post_code, '郵便番号　' %>
    <%= f.text_field :post_code %>
  </div>
  <div>
    <%= f.label :address, '住所　　　' %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :name, '宛名　　　' %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: 'btn btn-sm btn-success' %>
  </div>
<% end %>

<div class ="row">
  <div class ="col-8">
<table class ="table table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.post_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id), class: "btn-success btn-sm mx-auto" %></td>
        <td><%= link_to "削除する", address_path(address.id), method: :delete, class: "btn-danger btn-sm mx-auto" %></td>
      </tr>
      </tr>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>
</div>