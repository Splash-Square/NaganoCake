<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'admin/genres/genresearch',genres: @genres %>
    </div>
    <div class="col-9 flex-row d-flex flex-wrap">
    <h2>商品一覧</h2>
    <div class="">
      <% @items.each do |item| %>
      <div class=''>
          <% if item.is_selling == true %>
            <% if item.image.attached? %>
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.image, size: "200x200" %>
              <% end %>
            <% end %>
            <p class=""><%= item.item_name %></p>
            <p><%= (item.price * 1.1).round.to_s(:delimited)  %>円</p>
          <% end %>
        </div>
      <% end %>
    </div>
    </div>
    <%= paginate @items %>
  </div>
</div>