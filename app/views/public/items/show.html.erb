<div class="container px-5 px-sm-0">
  <div class="row p-5">
    <div class="col-md-2">

    </div>
    <div class="col-md-3">
      <%= image_tag @item.image, size: "200x200" %>
    </div>
    <div class="col-md-4 offset-md-1 mx-auto">
      <p><%= @item.item_name %></p>
      <p><%= @item.item_description %></p><br><br><br><br><br>
      <p><%= (@item.price * 1.1).round.to_s(:delimited)  %>（税込）円</p><br>

    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mx-auto">
      <%= link_to "カートに入れる", cart_items_path, class: "btn btn-success" %>
    </div>
  </div>
</div>