<%= stylesheet_link_tag 'public/registration' %>
<div class='container'>
    <div class="offset-2 col-10">

      <h2 class="title">新規会員登録</h2>

    <%= form_with model: @customer, url: customer_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <table>
        <tr>
          <th class="label">名前</th></br>
            <td>
              <div class="field">
                <%= f.text_field :family_name, autofocus: true, placeholder: '姓', size: "40x10", class: "" %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.text_field :first_name, autofocus: true, size: "40x10", placeholder: '名' %>
              </div>
            </td>
        </tr>
        <tr>
          <th class="label">フリガナ</th>
            <td>
              <div class="field">
                <%= f.text_field :family_name_kana, autofocus: true, size: "40x10", placeholder: 'セイ', class: "" %>
              </div>
            </td>
            <td>
              <div class="field">
                <%= f.text_field :first_name_kana, autofocus: true, size: "40x10", placeholder: 'メイ', class: "" %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">メールアドレス</th>
            <td>
              <div class="field">
                <%= f.email_field :email, autofocus: true, size: "40x10", class: "email" %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">郵便番号</th>
            <td>
              <div class="field">
                <%= f.text_field :post_code, autofocus: true, size: "40x10", class: "" %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">住所</th>
            <td>
              <div class="field">
                <%= f.text_field :address, autofocus: true, size: "40x10", class: "" %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">電話番号</th>
            <td>
              <div class="field">
                <%= f.text_field :phone_number, autofocus: true, size: "40x10", class: "" %>
              </div>
            </td>
        </tr>

        <tr>
          <th class="label">パスワード（6文字以上）</th>
          　<td>
              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", size: "40x10", class: "password" %>
              </div>
            </td>
        </tr>

          <th class="label">パスワード（確認用）</th>
          　<td>
              <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", size: "40x10", class: "password_confirm" %>
              </div>
            </td>
        </tr>
      </table>
            <div class="actions">
              <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
            </div>
    <% end %>

      <h2 class="title">既に登録済みの方</h2>
      <p><%= link_to 'こちら', new_customer_session_path %> からログインしてください</p>

  </div>
</div>