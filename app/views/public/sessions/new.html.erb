<%= stylesheet_link_tag 'public/sessions_login' %>

<div class='container'>
  <div class='row'>
    <div class="col-8">

      <h1>ログイン</h1>
      <h2 class="title">会員の方はこちらからログイン</h2>

      <%= form_with model: @customer, url:customer_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
        </br>
        <div class="actions">
          <%= f.submit "Log in",class: 'btn btn-sm btn-primary'%>
        </div>
      <% end %>
      </br>
      <h2 class="title">会員登録がお済でない方</h2>
      <p><%= link_to 'こちら', new_customer_registration_path %> からログインしてください</p>

    </div>
  </div>
</div>
