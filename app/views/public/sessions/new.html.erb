<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h1>ログイン</h1>
      <h2>会員の方はこちらからログイン</h2>

      <%= form_with model: @customer, url:customer_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>


        <div class="actions">
          <%= f.submit "Log in",class: 'btn btn-sm btn-primary'%>
        </div>
      <% end %>

      <h2>会員登録がお済でない方</h2>
      <p><%= link_to 'こちら', new_customer_registration_path %> からログインしてください</p>

    </div>
  </div>
</div>