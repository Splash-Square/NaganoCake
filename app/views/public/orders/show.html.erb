<div class="container">
  <p>注文履歴詳細</p>
 <div class="row">
  <div class="col-6">

    <p>注文情報</p>
    <% @orders.each do |order| %>
   <table class= "table table-bordered">
    <tr>
      <td>注文日</td>
      <td><%= order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= order.address %></td>payment_method
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= order.payment_method %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= order.order_status %></td>
    </tr>
   </table>
   <% end %>
  </div>

  <div class= "col-3">
    <p>請求情報</p>
    <% @orders.each do |order| %>
   <table class= "table table-bordered">
    <tr>
      <td>商品合計</td>
      <td><%= order.billing_amount %></td>

    </tr>
    <tr>
      <td>配送料</td>
      <td><%= order.postage %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= order.billing_amount %>＋<%= order.postage %></td>
    </tr>
   </table>
   <% end %>
  </div>
 </div>

 <div class="row">
  <div class="col-8">
    <p>注文内容</p>

   <table class= "table table-bordered">
    <thead>
     <tr>
      <td>商品</td>
      <td>単価（税込み）</td>
      <td>個数</td>
      <td>小計</td>
     </tr>
    </thead>

    <% @orders.each do |order| %>
    <% @order_details.each do |order_detail| %>
    <tbodey>
      <tr>
      <td><%= order_detail.id %></td>
      <td><%= order_detail.transaction_price %></td>
      <td><%= order_detail.quantity %></td>
      <td><%= order_detail.transaction_price %>*<%= order_detail.quantity %></td>
     </tr>
    </tbodey>
    <% end %>
    <% end %>
   </table>
  </div>
  </div>
</div>