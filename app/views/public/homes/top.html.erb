<h2>新着商品</h2>

 <div class="col-md-8 offset-md-1 mx-auto d-flex flex-wrap">

      <% @new_items.each do |item| %>
        <div class="col">
          <% if item.is_selling == true %>
            <% if item.image.attached? %>
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.image, size: "200x200" %>
              <% end %>
            <% end %>
            <p class=""><%= item.item_name %></p>
            <p>￥<%= (item.price * 1.1).round.to_s(:delimited)  %></p>
          <% end %>
        </div>
      <% end %>
    </div>

<p><%= link_to "全ての商品を見る＞", items_path %></p>
