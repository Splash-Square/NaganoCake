<%= stylesheet_link_tag 'admin/orders' %>
<div class='container'>
  <div class='row'>
    <div class='col'>
      <div class="d-flex align-items-center mb-4">
        <%= link_to admin_customer_path(@order.customer_id),class: 'text-dark' do %>
          <h5 class="m-0"><%= @order.name %></h5>
        <% end %>
        <p class="m-0">さんの</p>
        <h4 class="m-0">注文履歴</h4>
      </div>
      <table class="table table-hover table-light table-borderless">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            <td><%= order.order_details.sum(:quantity) %></td>
            <td><%= order.order_status_i18n %></td>
          </tr>
        <% end %>
        <%= paginate @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>