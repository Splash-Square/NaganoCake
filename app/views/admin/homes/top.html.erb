<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col'>
      <h4>注文一覧画面</h4>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>購入個数</th>
            <th>注文ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to admin_orders_path(order.customer_id) ,class: 'text-dark' do %>
              <%=l  order.created_at %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td><%= order.order_details.sum(:quantity) %></td>
            <td><%= order.order_status %></td>
          </tr>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>