<div class='container'>
  <div class='row'>
    <div class='col'>
      <h4>注文履歴一覧</h4>
      <table class="table table-hover table-inverse text-center">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>購入個数</th>
            <th>注文ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%=  order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            <td><%= link_to orders_customer_admin_order_path(order.customer_id) ,class: 'text-dark' do %>
                <%= order.name %>
                <% end %>
              </td>
            <td><%= order.order_details.sum(:quantity) %></td>
            <td><%= order.order_status %></td>
          </tr>
        <% end %>
        <%= paginate @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>