<div class='container px-5 px-sm-0'>

  <div class='row'>

    <div class='col'>
      <h3>会員一覧</h3>
      <table>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= customer.family_name %><%= customer.first_name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>